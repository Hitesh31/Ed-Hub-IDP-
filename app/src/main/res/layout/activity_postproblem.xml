<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"


    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.puneetmangla.myapp.postproblem"
    android:background="@color/Bg2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
        <com.nightonke.boommenu.BoomMenuButton
            android:id="@+id/bmb4"
            android:layout_width="100dp"
            android:layout_height="100dp"

            android:layout_marginTop="4dp"
            android:layout_marginLeft="5dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:bmb_buttonEnum="textOutsideCircle"
            app:bmb_highlightedColor="@color/Bg3"
            app:bmb_normalColor="@color/Bg1" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/post2"
            android:layout_width="70dp"
            android:layout_height="70dp"

            android:layout_marginEnd="315dp"
            android:layout_marginStart="19dp"
            android:layout_marginTop="510dp"
            android:onClick="Post"
            android:src="@drawable/posticon" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginStart="85dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="0dp"
            android:background="@color/Bg8"
            android:gravity="center"
            android:text="Post your Problem Here!"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@android:color/holo_green_dark" />

        <EditText
            android:id="@+id/pbname"
            android:layout_width="350dp"
            android:layout_height="41dp"
            android:layout_marginBottom="7dp"
            android:layout_marginEnd="17dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="100dp"
            android:background="@color/default_bmb_shareLine1Color"
            android:ems="10"
            android:hint="Problem Name"
            android:inputType="textPersonName"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:textAppearance="@style/TextAppearance.AppCompat"
            />

        <AutoCompleteTextView
            android:id="@+id/pbtag"
            android:layout_width="350dp"
            android:layout_height="41dp"
            android:layout_marginBottom="12dp"
            android:layout_marginEnd="17dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="150dp"
            android:background="@color/default_bmb_shareLine1Color"
            android:ems="10"
            android:hint="Problem Tag"
            android:inputType="textPersonName"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <EditText
            android:id="@+id/pbtext"
            android:layout_width="350dp"
            android:layout_height="300dp"
            android:layout_marginBottom="7dp"
            android:layout_marginEnd="17dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="200dp"
            android:background="@color/default_bmb_shareLine1Color"
            android:ems="10"
            android:autoLink="web"
            android:inputType="text|textAutoCorrect|textAutoComplete|textMultiLine|textShortMessage|textLongMessage|textPersonName|textPostalAddress" />
    </RelativeLayout>
</ScrollView>