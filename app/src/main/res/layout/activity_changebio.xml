<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Bg7"
    tools:context="com.example.puneetmangla.myapp.changebio">

    <EditText
        android:id="@+id/biotext"
        android:layout_width="340dp"
        android:layout_height="304dp"
        android:layout_marginBottom="13dp"
        android:layout_marginEnd="22dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="120dp"
        android:background="@color/default_bmb_shareLine1Color"
        android:ems="10"
        android:inputType="textMultiLine"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:paddingTop="5dp"
        app:layout_constraintBottom_toTopOf="@+id/changebio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/changebio"
        android:layout_width="348dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="26dp"
        android:layout_marginEnd="18dp"
        android:layout_marginStart="18dp"
        android:background="@color/Bg9"
        android:onClick="Change"
        android:text="change Biography"
        android:textColor="@android:color/holo_purple"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="327dp"
        android:layout_height="88dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="73dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toTopOf="@+id/biotext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/biography" />
</android.support.constraint.ConstraintLayout>
